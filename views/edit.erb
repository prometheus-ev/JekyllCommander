<p>
  <% if @page.multilang? %>
    <%= language_links(@page, @lang) %> |
  <% end %>
  <%= link_to_preview(@page) %>
</p>

<%= form :put, request.path %>
  <% if @page.render? %>
    <%= header_fields(@page.header(@lang)) %>
  <% end %>

  <p>
    <label for="page_body">Body:</label><br />
    <textarea name="body" id="page_body" rows="20" cols="60"><%= @page.body(@lang) %></textarea>
  </p>

  <p>
    <label for="page_slug">Slug:</label><br />
    <input type="text" name="slug" id="page_slug" value="<%= @page.slug %>" size="50">
  </p>

  <p>
    <input type="submit" value="Save page">
    | <%= link_to 'Cancel', relative_url %>
  </p>
</form>

<%= form_delete 'page', request.path %>
