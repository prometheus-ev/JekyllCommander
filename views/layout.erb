<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.1//EN"
    "http://www.w3.org/TR/xhtml11/DTD/xhtml11.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
   <meta http-equiv="content-type" content="text/html; charset=utf-8" />
   <title>
     <%= repo_name %>:<%= @file ? relative_path(@file) : relative_pwd %> [Jekyll Commander]
   </title>

   <script src="<%= url_for '/js/jquery-1.4.2.min.js' %>" type="text/javascript"></script>
   <script src="<%= url_for '/js/application.js' %>" type="text/javascript"></script>
   <script src="<%= url_for '/markitup/jquery.markitup.pack.js' %>" type="text/javascript"></script>
   <link rel="stylesheet" href="<%= url_for '/markitup/skins/simple/style.css' %>" type="text/css" media="screen, projection" />
   <link rel="stylesheet" href="<%= url_for '/css/screen.css' %>" type="text/css" media="screen, projection" />
</head>
<body>
  <div id="site">

    <div id="sidebar">
      <p id="loginfo">[
        <%= options.site ? link_to(repo_name, options.site) : repo_name %>
      <% if options.staging || options.preview %>
        <%= [link_to_staging, link_to_preview].compact.join(' ') %>
      <% end %>
        : <strong><%= user %></strong>
      ]</p>

      <p id="trail"><%= trail %></p>

      <p id="files"><%= partial :files %></p>

      <div id="actions">
        <%= link_to 'New page',   relative_path(';new_page') %> |
        <%= link_to 'New folder', relative_path(';new_folder') %> |
        <%= link_to 'Status',     relative_path(';status') %>

      <% unless @file %>
        <br style="margin-bottom: 0.9em" />
      <% end %>

      <% if @path == '/' %>
        <%= form_delete 'Discard copy!' %> |
        <%= form :post, '/' + u(';update') %>
          <p><button type="submit">Update copy</button></p>
        </form>
      <% else %>
        <%= form_delete :folder unless @file %>
      <% end %>
      </div>

      <p id="site-actions">
        <%= link_to 'Save changes', '/' + u(';save') %> |
        <%= link_to 'Publish site', '/' + u(';publish') %>
      </p>
    </div>

    <div id="main">
      <%= render_flash :error, :notice %>
      <%= yield %>
    </div>

  </div>
</body>
</html>
