<h2>Status of <code><%= path_info %></code></h2>

<% for type, files in @status.sort %>
  <h3 class="<%= type %>">
    <%= files.size %>
    <%= type %><%= 's' if type == 'conflict' && files.size != 1 %>
  </h3>

  <ul>
  <% for file in files.sort %>
    <li>
      <%= link_to_file file %>
    <% unless (links = status_links_for(file, type)).empty? %>
      [<%= links.join(' | ') %>]
    <% end %>
    </li>
  <% end %>
  </ul>
<% end %>
