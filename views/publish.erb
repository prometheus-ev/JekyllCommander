<h2>Publish site</h2>

<%= form_this %>
  <label for="commit_tag">Version:</label>
  <select name="tag" id="commit_tag">
  <% unless @logs.empty? %>
    <option value="_new">New...</option>
  <% end %>
  <% for tag in @tags %>
    <option value="<%= tag.name %>">
    <% if commit = tag.commit %>
      <%= commit.authored_date.strftime('%Y-%m-%d %H:%M:%S %Z') %> (<%= commit.author.name %>)
    <% else %>
      <%= tag.name %>
    <% end %>
    </option>
  <% end %>
  </select>
  <input type="submit" value="Publish site" />
</form>

<% unless @logs.empty? %>
<hr />

<table class="commit_log">
<% for log in @logs %>
  <tr>
    <td class="date"><%= log.date.strftime('%Y-%m-%d %H:%M:%S %Z') %></td>
    <td class="author"><%= log.author.name %></td>
    <td>-</td>
    <td><%= log.message %></td>
  </tr>
<% end %>
</table>
<% end %>
